<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_test_app.RecipePage">

    
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="burger.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                x:Name="Title"
                Text="Title"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <ListView x:Name="ListOfIngredients" Background="blue" VerticalOptions="Center"  IsVisible="false" >
            </ListView>

            <ListView x:Name="ListOfCusoomIngredients" Background="blue" VerticalOptions="Center"   >
            </ListView>

            <Label
                x:Name="Instruction"
                Text="Instruction"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="15"
                HorizontalOptions="Center" />

            <Label x:Name="ListOfCopmpsition" Background="blue" VerticalOptions="Center"  >
            </Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
